@model SistemaFesta.Models.Login
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Login</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicons -->
    <link href="~/balao.ico" rel="shortcut icon" />

    <!-- Bootstrap CSS File -->
    <link href="~/Content/Page_Bootstrap/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Libraries CSS Files -->
    <link href="~/Content/Page_Bootstrap/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/Page_Bootstrap/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/Content/Page_Bootstrap/lib/ionicons/css/ionicons.min.css" rel="stylesheet">
    <link href="~/Content/Page_Bootstrap/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Content/Page_Bootstrap/lib/lightbox/css/lightbox.min.css" rel="stylesheet">

    @* Bootstrap do Login *@
    <link href="~/Content/Login_Bootstrap/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Login_Bootstrap/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Login_Bootstrap/fonts/Linearicons-Free-v1.0.0/icon-font.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Login_Bootstrap/vendor/animate/animate.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Login_Bootstrap/vendor/css-hamburgers/hamburgers.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Login_Bootstrap/vendor/animsition/css/animsition.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Login_Bootstrap/vendor/select2/select2.min.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Login_Bootstrap/vendor/daterangepicker/daterangepicker.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Login_Bootstrap/css/util.css" rel="stylesheet" type="text/css">
    <link href="~/Content/Login_Bootstrap/css/main.css" rel="stylesheet" type="text/css">

    <!-- Main Stylesheet File -->
    <link href="~/Content/Page_Bootstrap/css/style.css" rel="stylesheet">
    <link href="~/Content/ViewCss/Login/login.css" rel="stylesheet" />

</head>

<body id="page-top" class="body">

    <!--/ Nav Star /-->
    <nav class="navbar navbar-b navbar-trans navbar-expand-md fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll" href="#page-top">Escolha Tema</a>
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarDefault"
                    aria-controls="navbarDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <div class="navbar-collapse collapse justify-content-end" id="navbarDefault">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link js-scroll" href="/Home/Index">Home</a>
                    </li>
                    <li class="nav-item active">
                        <a class="nav-link js-scroll" href="#">Login</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!--/ Nav End /-->

    @using (Html.BeginForm())
    {
        <div class="limiter">
            <div class="container-login100" style="background-image: url('../../Content/Login_Bootstrap/images/baloes.jpg');">
                <div class="wrap-login100 p-t-30 p-b-50">
                    <span class="login100-form-title p-b-41 login">
                        Login
                    </span>

                    <div class="login100-form validate-form p-b-33 p-t-5">
                        <div class="wrap-input100 validate-input">
                            @Html.TextBoxFor(m => m.NomeUsuario, new { @placeholder = "Digite seu usuário", required = "", id = "login", @class = "input100" })
                            <span class="focus-input100" data-placeholder="&#xe82a;"></span>
                        </div>

                        <div class="wrap-input100 validate-input">
                            @Html.PasswordFor(m => m.Senha, new { @placeholder = "Senha", required = "", id = "senha", @class = "input100" })
                            <span class="focus-input100" data-placeholder="&#xe80f;"></span>
                        </div>

                        <div id="div-error">
                            <b>@Html.ValidationMessage("login.invalido", new { @class = "", id = "error" })</b>
                        </div>

                        <input type="submit" value="Login" />
                    </div>
                </div>
            </div>
        </div>
    }

    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>
    <div id="preloader"></div>

    <!-- JavaScript Libraries -->
    <script src="~/Content/Page_Bootstrap/lib/jquery/jquery.min.js"></script>
    <script src="~/Content/Page_Bootstrap/lib/jquery/jquery-migrate.min.js"></script>
    <script src="~/Content/Page_Bootstrap/lib/popper/popper.min.js"></script>
    <script src="~/Content/Page_Bootstrap/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/Page_Bootstrap/lib/easing/easing.min.js"></script>
    <script src="~/Content/Page_Bootstrap/lib/counterup/jquery.waypoints.min.js"></script>
    <script src="~/Content/Page_Bootstrap/lib/counterup/jquery.counterup.js"></script>
    <script src="~/Content/Page_Bootstrap/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/Content/Page_Bootstrap/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/Content/Page_Bootstrap/lib/typed/typed.min.js"></script>
    <!-- Contact Form JavaScript File -->
    <script src="~/Content/Page_Bootstrap/contactform/contactform.js"></script>

    <!-- Template Main Javascript File -->
    <script src="~/Content/Page_Bootstrap/js/main.js"></script>

    <div id="dropDownSelect1"></div>
</body>
</html>



