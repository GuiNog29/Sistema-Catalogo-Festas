@model SistemaFesta.Models.Fornecedor
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Editar Perfil</title>
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <meta content="" name="keywords">
    <meta content="" name="description">

    <!-- Favicons -->
    <link href="~/balao.ico" rel="shortcut icon" />

    <!-- Bootstrap CSS File -->
    <link href="~/Content/Page_Bootstrap/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">

    <!-- Libraries CSS Files -->
    <link href="~/Content/Page_Bootstrap/lib/font-awesome/css/font-awesome.min.css" rel="stylesheet">
    <link href="~/Content/Page_Bootstrap/lib/animate/animate.min.css" rel="stylesheet">
    <link href="~/Content/Page_Bootstrap/lib/ionicons/css/ionicons.min.css" rel="stylesheet">
    <link href="~/Content/Page_Bootstrap/lib/owlcarousel/assets/owl.carousel.min.css" rel="stylesheet">
    <link href="~/Content/Page_Bootstrap/lib/lightbox/css/lightbox.min.css" rel="stylesheet">

    <!-- Main Stylesheet File -->
    <link href="~/Content/Page_Bootstrap/css/style.css" rel="stylesheet">
    <link href="~/Content/ViewCss/PessoaJuridica/editarfornecedor.css" rel="stylesheet" />
</head>

<body id="page-top">

    <!--/ Nav Star /-->
    <nav class="navbar navbar-b navbar-trans navbar-expand-md fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand js-scroll" href="#page-top">Escolha Tema</a>
            <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#navbarDefault"
                    aria-controls="navbarDefault" aria-expanded="false" aria-label="Toggle navigation">
                <span></span>
                <span></span>
                <span></span>
            </button>
            <div class="navbar-collapse collapse justify-content-end" id="navbarDefault">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link js-scroll" href="/Home/Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll" href="/Tema/ListarTemasParaPessoaJuridica/@Model.Id">Temas</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll active" href="#">Perfil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link js-scroll" href="/Login/Logout">Logout</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <!--/ Nav End /-->

    <div class="container card shadow mb-4 corpo">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.CNPJ)
            @Html.HiddenFor(model => model.CPF)

            <h4>Editar Perfil</h4><hr />

            <div class="container">
                <div class="row container-fluid">

                    <div id="espaco-entre-campos" class="col-lg-12">
                        <b>@Html.LabelFor(model => model.Nome, "Nome:")</b>
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", placeholder = "Insira seu nome completo" } })
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>

                    <div id="espaco-entre-campos" class="col-lg-6">
                        <b>@Html.LabelFor(model => model.NomeUsuario, "Nome de usuário:")</b>
                        @Html.EditorFor(model => model.NomeUsuario, new { htmlAttributes = new { @class = "form-control", placeholder = "Insira seu nome de usuário" } })
                        @Html.ValidationMessageFor(model => model.NomeUsuario, "", new { @class = "text-danger" })
                    </div>

                    <div id="espaco-entre-campos" class="col-lg-6">
                        <b>@Html.LabelFor(model => model.Email, "Email:")</b>
                        @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", placeholder = "Insira seu email" } })
                        @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                    </div>

                    <div id="espaco-entre-campos" class="col-lg-6">
                        <b>@Html.LabelFor(model => model.Senha, "Senha:")</b>
                        @Html.EditorFor(model => model.Senha, new { htmlAttributes = new { @class = "form-control", placeholder = "Insira sua senha de acesso", type = "password" } })
                        @Html.ValidationMessageFor(model => model.Senha, "", new { @class = "text-danger" })
                    </div>

                    <div id="espaco-entre-campos" class="col-lg-6">
                        <b>@Html.LabelFor(model => model.ComfirmarSenha, "Confirmar Senha:")</b>
                        @Html.EditorFor(model => model.ComfirmarSenha, new { htmlAttributes = new { @class = "form-control", placeholder = "Confirme sua senha", type = "password" } })
                        @Html.ValidationMessageFor(model => model.ComfirmarSenha, "", new { @class = "text-danger" })
                    </div>

                    <div id="espaco-entre-campos" class="col-lg-6">
                        <b>@Html.LabelFor(model => model.NomeEmpresa, "Empresa:")</b><br />
                        @Html.EditorFor(model => model.NomeEmpresa, new { htmlAttributes = new { @class = "form-control", placeholder = "Insira o nome da sua empresa" } })
                        @Html.ValidationMessageFor(model => model.NomeEmpresa, "", new { @class = "text-danger" })
                    </div>

                    <div id="espaco-entre-campos" class="col-lg-6">
                        <b>@Html.LabelFor(model => model.Telefone, "Telefone:")</b>
                        @Html.EditorFor(model => model.Telefone, new { htmlAttributes = new { @class = "form-control", placeholder = "Insira telefone de contato", id = "telefone" } })
                        @Html.ValidationMessageFor(model => model.Telefone, "", new { @class = "text-danger" })
                    </div>

                    <div id="espaco-entre-campos" class="col-lg-6">
                        <b>@Html.LabelFor(model => model.CPF, "CPF:")</b><br />
                        @Html.DisplayFor(model => model.CPF, new { htmlAttributes = new { @class = "form-control", placeholder = "Insira seu CPF", id = "cpf" } })
                        @Html.ValidationMessageFor(model => model.CPF, "", new { @class = "text-danger" })
                    </div>

                    <div id="espaco-entre-campos" class="col-lg-4">
                        <b>@Html.LabelFor(model => model.CNPJ, "CNPJ:")</b>
                        @Html.DisplayFor(model => model.CNPJ, new { htmlAttributes = new { @class = "form-control", placeholder = "Insira o CNPJ da sua empresa", id = "cnpj" } })
                        @Html.ValidationMessageFor(model => model.CNPJ, "", new { @class = "text-danger" })
                    </div>

                    <input id="botao-salvar" type="submit" value="Salvar" class="btn btn-success" />

                </div>
            </div><br />
        }

        <div class="container-fluid">
            <a class="btn btn-primary botao-voltar" href="/PessoaJuridica/PerfilPessoaJuridica/@Model.Id">Voltar</a>
        </div>
    </div>

    <a href="#" class="back-to-top"><i class="fa fa-chevron-up"></i></a>
    <div id="preloader"></div>

    <!-- JavaScript Libraries -->
    <script src="~/Content/Page_Bootstrap/lib/jquery/jquery.min.js"></script>
    <script src="~/Content/Page_Bootstrap/lib/jquery/jquery-migrate.min.js"></script>
    <script src="~/Content/Page_Bootstrap/lib/popper/popper.min.js"></script>
    <script src="~/Content/Page_Bootstrap/lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Content/Page_Bootstrap/lib/easing/easing.min.js"></script>
    <script src="~/Content/Page_Bootstrap/lib/counterup/jquery.waypoints.min.js"></script>
    <script src="~/Content/Page_Bootstrap/lib/counterup/jquery.counterup.js"></script>
    <script src="~/Content/Page_Bootstrap/lib/owlcarousel/owl.carousel.min.js"></script>
    <script src="~/Content/Page_Bootstrap/lib/lightbox/js/lightbox.min.js"></script>
    <script src="~/Content/Page_Bootstrap/lib/typed/typed.min.js"></script>
    <!-- Contact Form JavaScript File -->
    <script src="~/Content/Page_Bootstrap/contactform/contactform.js"></script>
    <!-- Template Main Javascript File -->
    <script src="~/Content/Page_Bootstrap/js/main.js"></script>

</body>
</html>